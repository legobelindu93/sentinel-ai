{
    "manifest_version": 3,
    "name": "SENTINEL·AI",
    "version": "1.0.0",
    "description": "Advanced static analysis and malware detection for GitHub repositories.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "https://github.com/*",
        "https://api.github.com/*",
        "https://raw.githubusercontent.com/*",
        "https://codeload.github.com/*"
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "index.html",
        "default_title": "SENTINEL·AI",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "assets/background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "https://github.com/*"
            ],
            "js": [
                "assets/content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "assets/*"
            ],
            "matches": [
                "https://github.com/*"
            ]
        }
    ]
}